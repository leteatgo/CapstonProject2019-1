<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:text="미리봄"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/mainTitle"
        android:layout_centerHorizontal="true"
        android:text="웨이팅 하기 전에 미리보기."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/main_kakaoBtn"
        android:text="카카오톡으로 시작하기"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below = "@id/mainTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/main_naverBtn"
        android:layout_below = "@id/main_kakaoBtn"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/main_emailBtn"
        android:text="이메일로 시작하기"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below = "@id/main_naverBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/main_join"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/main_emailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_jointext"
            android:layout_marginTop="10dp"
            android:text="아직도 회원이 아니신가요?"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>